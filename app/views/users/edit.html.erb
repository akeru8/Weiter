<div class="container">
	<div>
		<%= link_to "Log Out", destroy_user_session_path, class: 'btn btn-danger pull-right', "data-confirm" => "本当にログアウトしますか？", method: :delete %>
	</div>

	<h1 class="useredit-title">Edit Profile</h1>

	<%= form_for(@user) do |f| %>
		<div class="useredit-img">
			<h3 class="articleedit-img-title">Profile Image</h3>
			<%= f.attachment_field :profile_image %>
			<%= attachment_image_tag @user, :profile_image, size: "300x300", class: "img-circle", format: 'jpeg', fallback: "no_image.jpg" %>
		</div>

		<div class="useredit-main">

			<div>
				<%= f.label :name, 'Username' %>
				<%= f.text_field :name, class: 'form-control' %>
			</div>

			<div>
				<%= f.label :email, 'Email' %>
				<%= f.email_field :email, class: 'form-control' %>
			</div>

			<div>
				<%= f.label :goal, 'Goal' %>
				<%= f.text_field :goal, class: 'form-control' %>
			</div>

			<div>
			<%= f.label :introduction, 'Introduction' %>
			<%= f.text_area :introduction,  class: 'form-control'  %>
			</div>
			<div class="useredit-button">
				<%= f.submit 'Done', class: 'btn btn-primary pull-right' %>
			</div>
		</div>
	<% end %>
</div>