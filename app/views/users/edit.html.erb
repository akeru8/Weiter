

<div class="container">
	<div class="">
		<%= link_to "ログアウト", destroy_user_session_path, class: 'btn btn-danger pull-right', "data-confirm" => "本当にログアウトしますか？", method: :delete %>
	</div>

	<h1 class="articleedit-title">Profile Edit</h1>

	<%= form_for(@user, url: user_path) do |f| %>
		<div class="articleedit-img">
			<h3 class="articleedit-img-title">Profile Image</h3>
			<%= f.attachment_field :profile_image %>
			<%= attachment_image_tag @user, :profile_image, size: "300x300", class: "img-circle", format: 'jpeg', fallback: "no_image.jpg" %>
		</div>

		<div class="articleedit-main">

			<div class="">
				<%= f.label :name, 'ユーザーネーム' %>
				<%= f.text_field :name, class: 'form-control' %>
			</div>

			<div class="">
				<%= f.label :email, 'メールアドレス' %>
				<%= f.email_field :email, class: 'form-control' %>
			</div>

			<div class="">
				<%= f.label :goal, '目標' %>
				<%= f.text_field :goal, class: 'form-control' %>
			</div>

			<div class="">
			<%= f.label :introduction, '自己紹介' %>
			<%= f.text_area :introduction, :maxlength => "255", :size => "80x5",  class: 'form-control'  %>
			</div>
			<div class="articleedit-button">
				<%= f.submit 'プロフィール編集を完了する', class: 'btn btn-primary pull-right' %>
			</div>
		</div>
	<% end %>
</div>