<div class="container">
	<div class="row">
		<h1>Profile</h1>
		<div class="form-group">
			<%= attachment_image_tag @user, :profile_image, size: "200x200", class: "img-circle", format: 'jpeg', fallback: "no_image.jpg" %>
		</div>
		<div class="col-md-4">
			<%= @user.name %>
		</div>
		<div class="col-md-4">
			<%= @user.goal %>
		</div>
		<div class="col-md-8">
			<%= @user.introduction %>
		</div>
		<div>
			<p><%=link_to "フォロー", followingsandfollowers_user_path(@user) %><%= @user.followings.count %></p>
			<p><%=link_to "フォロワー", followingsandfollowers_user_path(@user) %><%= @user.followers.count %></p>
			<!-- 自分をのぞいた人たちのみボタンを表示する -->
			<% if current_user != @user %>
				<% if @user.followed_by?(current_user) %>
					<p><%=link_to "フォロー中", user_relationships_path(@user), method: :delete %></p>
				<% else %>
					<p><%=link_to "フォローする", user_relationships_path(@user), method: :post %></p>
				<% end %>
			<% end %>
		</div>

		<div class="wrap">
			<ul id="tab-menu" class="clearfix">
				  <li><a href="#tab1" class="active"><i class="far fa-image"></i>(<%= @user.articles.count %>)</a></li>
				  <li><a href="#tab2" class=""><i class="far fa-heart"></i>(<%= @user.favorite_articles.count %>)</a></li>
		　　</ul>
		　　<div id="tab-contents" class="clearfix">
				<div id="tab1" class="tab">
					<% @articles.each do |article| %>
						<div class="col-md-3">
							<div>
								<%= attachment_image_tag article, :image, size: "150x90", fallback: "no_image.jpg", class: "img-rounded" %>
							</div>
							<div>
								<%= link_to article.title, article_path(article) %>
							</div>
							<div>
								<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i><%= article.favorites.count %>
							</div>
							<div>
								<i class="fa fa-comment"></i><%= article.post_comments.count %>
							</div>
						</div>
			    	<% end %>
			    </div>

				<div id="tab2" class="tab">
					<% @favorite_articles.each do |article| %>
						<div class="col-md-3">
							<div>
								<%= attachment_image_tag article, :image, size: "150x90", fallback: "no_image.jpg", class: "img-rounded" %>
							</div>
							<div>
								<%=link_to article.title, article_path(article.id) %>
							</div>
							<div>
								<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i><%= article.favorites.count %>
							</div>
							<div>
								<i class="fa fa-comment"></i><%= article.post_comments.count %>
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
			<% if @user == current_user %>
				<%= link_to "編集", edit_user_path(@user), method: :get, class: 'btn btn-primary pull-right' %>
			<% end %>
	</div>
</div>

