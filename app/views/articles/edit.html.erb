<div class="container">
    <div class="article-edit">
        <h1 class="article-edit-theme">Edit Article</h1>
        <div class="edit-article-change-button">
            <%= link_to 'Edit Soccer Note',  soccer_note_edit_path(@article), class: 'btn btn-success pull-right' %>
        </div>
        <%= form_for(@article) do |f| %>
            <div class="edit-article">
                <h3>Image</h3>
                <%= attachment_image_tag @article, :image, size: "600x360", class: "img-rounded" %>
                <%= f.file_field :image %>
            </div>
            <div class="edit-article">
                <h3>Title</h3>
                <%= f.text_field :title, class: 'form-control' %>
            </div>
            <div class="edit-article">
                <h3>Caption</h3>
                <%= f.text_area :content, size: "80x20",  class: 'form-control' %>
            </div>
            <div class="newarticle-caption">
                <h4 class="newarticle-hashtag">Hashtag</h4>
                <%= f.text_area :hashbody, size:"70x2", class: 'form-control' %>
            </div>
            <div class="editarticle-button">
                <%= f.submit "　　　　　Done　　　　　", class:'btn btn-primary' %>
            </div>
        <% end %>
    </div>
</div>