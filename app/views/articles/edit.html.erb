<div class="container">
    <div class="row">
        <h1>編集</h1>
           <%= form_for(@article) do |f| %>
                <div class="">
                	<h4>イメージ</h4>
                	<%= attachment_image_tag @article, :image, size: "600x360" %>
                    <%= f.file_field :image %>
                </div>

                <div class="">
                	<h4>タイトル</h4>
                	<%= f.text_field :title, class: 'form-control' %>
                </div>

                <div class="">
                	<h4>キャプション</h4>
                	<%= f.text_area :content, :size => "80x5",  class: 'form-control' %>
                </div>

                 <%= f.submit "保存" %>

             <% end %>
    </div>
</div>