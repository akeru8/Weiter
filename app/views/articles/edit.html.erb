<div class="container">
    <div class="articleedit">
        <h1 class="articleedit-theme">Article Edit</h1>
           <%= form_for(@article) do |f| %>
                <div class="editarticle">
                	<h3>Image</h3>
                	<%= attachment_image_tag @article, :image, size: "600x360", class: "img-rounded" %>
                    <%= f.file_field :image %>
                </div>

                <div class="editarticle">
                	<h3>タイトル</h3>
                	<%= f.text_field :title, class: 'form-control' %>
                </div>

                <div class="editarticle">
                	<h3>キャプション</h3>
                	<%= f.text_area :content, size: "80x20",  class: 'form-control' %>
                </div>

                <div class="newarticle-caption">
                    <h4 class="newarticle-hashtag">ハッシュタグ</h4>
                    <%= f.text_area :hashbody, size:"70x2", class: 'form-control' %>
                </div>

                <div class="editarticle-button">
                    <%= f.submit "　　　　保存　　　　", class:'btn btn-primary' %>
                </div>

             <% end %>
    </div>
</div>