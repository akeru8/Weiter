
<div class="container">
    <h2 class="search-title">#<%= @hashtag.hashname %>（<%= @article.count %>）</h2>
    <div class="row">
        <div class="col-md-4">
                <div class="">
                <% @article.each do |article| %>
                    <div class= "">
                        <%= link_to article_path(article) do %>
                            <ul class="">
                                <li>
                                    <%= attachment_image_tag article, :image ,size:'360x240', format:'jpg', class: "img-rounded" %>
                                </li>
                            </ul>
                        <% end %>
                        <div id="favorites_buttons_<%= article.id %>", class="hashtag-favo">
                            <%= render partial: 'favorites/favorite', locals: { article: article} %>
                        </div>
                        <div class="hashtag-comment">
                            <i class="fa fa-comment"></i><%= article.post_comments.count %>
                        </div>
                        <div class="">
                            <h3 class="hashtag-title">
                                <%= link_to article.title, article_path(article) %>
                            </h3>
                        </div>
                        <div class="hashtag-profileimg">
                            <%= link_to user_path(article.user) do %>
                                <%= attachment_image_tag article.user, :profile_image, fallback: "no_image.jpg", class: "img-circle", size: "60x60" %>
                            <% end %>
                                by<%= link_to article.user.name,  user_path(article.user) %>
                        </div>
                    </div>
                <% end %>
            </div>
            </div>
</div>
<%= paginate @article %>