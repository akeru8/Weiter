<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="followingarticle-theme">Recommend</h1>
            <div class="row">
            	<% @users.each do |user| %>
                	<% @articles = Article.where(user_id: user.id).order("created_at DESC") %>
                    <% @articles.each do |article| %>
                        <div class="col-md-6 following-article">
                            <div class= "followingarticle-img">
                                <%= link_to article_path(article) do %>
                                    <%= attachment_image_tag article, :image ,size:'500x320', format:'jpg', class: "img-rounded" %>
                                <% end %>
                            </div>
                            <span class="created-at">
                                <%= l article.created_at, format: :short %>
                            </span>
                            <div id="favorites_buttons_<%= article.id %>", class="followingarticle-favo">
                                <%= render partial: 'favorites/favorite', locals: { article: article} %>
                            </div>
                            <div class="followingarticle-comment">
                                <i class="fa fa-comment"></i><%= article.post_comments.count %>
                            </div>
                            <div class="followingarticle-title">
                                <h4 class="">
                                    <%= link_to article.title, article_path(article) %>
                                </h4>
                            </div>
                            <div class="hashtag-profileimg">
                                <%= link_to user_path(article.user) do %>
                                    <%= attachment_image_tag article.user, :profile_image, fallback: "no_image.jpg", class: "img-circle", size: "60x60" %>
                                <% end %>
                                by<%= link_to article.user.name,  user_path(article.user) %>
                            </div>
                        </div>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>
<span id="back">
    <a href="#">
        <img src="assets/arrow.png" alt="">
    </a>
</span>