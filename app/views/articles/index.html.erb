<h1>Recoomend</h1>
<div class="container">
	<div class="row">
		<% @articles.each do |article| %>
		<div class="col-md-3">
			<div>
				<%= link_to article_path(article) do %>
					<%= attachment_image_tag article, :image, size: "150x90" %>
				<% end %>
			</div>
			<div>
				<%= link_to article.title, article_path(article) %>
			</div>
		</div>
		<% end %>
	</div>
</div>