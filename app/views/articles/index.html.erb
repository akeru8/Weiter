<div class="container">
	<div class="row">
		<p>検索</p>
		<%= form_tag(articles_path,:method => 'get') do %>
			<%= text_field_tag :search %>
			<%= submit_tag 'Search', :name => nil %>
		<% end %>
		<h1>Recoomend</h1>
		<% @articles.each do |article| %>
		<div class="col-md-3">
			<div>
				<%= link_to article_path(article) do %>
					<%= attachment_image_tag article, :image, size: "300x180" %>
				<% end %>
			</div>
			<div>
				<%= link_to article.title, article_path(article) %>
			</div>
			<!-- 部分的に更新したい場所（いいね機能） -->
			<div id="favorites_buttons_<%= article.id %>">
				<%= render partial: 'favorites/favorite', locals: { article: article} %>
			</div>
            <div class="">
            	<i class="fa fa-comment"></i>
            	<%= link_to article.post_comments.count, article_path(article) %>
            </div>
			<div>
				<%= link_to user_path(article.user) do %>
					<%= attachment_image_tag article.user, :profile_image, size: "120x60" %>
				<% end %>
				<%= link_to article.user.name,  user_path(article.user) %>
			</div>
		</div>
		<% end %>
		<h2>ランキング</h2>
		<% @all_ranks.each do |article| %>
			<div>
				<%= link_to article_path(article) do %>
					<%= attachment_image_tag article, :image, size: "300x180" %>
				<% end %>
			</div>
			<!-- ログインしているユーザーがファボしたかどうかで分岐 -->
				<% if article.favorited_by?(current_user) %>
						<div>
							<%= link_to article_favorites_path(article), method: :delete do %>
							<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
							<%= article.favorites.count %>
							<% end %>
						</div>
				<% else %>
					<div>
						<%= link_to article_favorites_path(article), method: :post do %>
							<i class="fa fa-heart" aria-hidden="true" style="color: blue;"></i>
							<%= article.favorites.count %>
						<% end %>
					</div>
				<% end %>
            <div class="">
            	<i class="fa fa-comment"></i>
            	<%= link_to article.post_comments.count, article_path(article) %>
            </div>
			<div>
				<%= link_to article.title, article_path(article) %>
			</div>
			<div>
				<%= link_to user_path(article.user) do %>
					<%= attachment_image_tag article.user, :profile_image, size: "120x60" %>
				<% end %>
				<%= link_to article.user.name,  user_path(article.user) %>
			</div>
		<% end %>
	</div>
</div>