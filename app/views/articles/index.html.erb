<h1>Recoomend</h1>
<div class="container">
	<div class="row">
		<% @articles.each do |article| %>
		<div class="col-md-3">
			<div>
				<%= link_to article_path(article) do %>
					<%= attachment_image_tag article, :image, size: "300x180" %>
				<% end %>
			</div>
			<div>
				<%= link_to article.title, article_path(article) %>
			</div>
			<!-- ログインしているユーザーがファボしたかどうかで分岐 -->
				<% if article.favorited_by?(current_user) %>
					<div>
						<%= link_to article_favorites_path(article), method: :delete do %>
						<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
						<%= article.favorites.count %>
						<% end %>
					</div>
				<% else %>
					<div>
						<%= link_to article_favorites_path(article), method: :post do %>
						<i class="fa fa-heart" aria-hidden="true" style="color: blue;"></i>
						<%= article.favorites.count %>
						<% end %>
					</div>
				<% end %>
			<div>
				<%= link_to user_path(article.user) do %>
					<%= attachment_image_tag article.user, :profile_image, size: "120x60" %>
				<% end %>
				<%= article.user.name %>
			</div>
		</div>
		<% end %>
	</div>
</div>