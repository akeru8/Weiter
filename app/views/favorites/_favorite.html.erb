<!-- ログインしているユーザーがファボしたかどうかで分岐 -->
<% if article.favorited_by?(current_user) %>
	<div>
		<%= link_to article_favorites_path(article.id), method: :delete, remote: :true do %>
			<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
			<%= article.favorites.count %>
		<% end %>
	</div>
<% else %>
	<div>
		<%= link_to article_favorites_path(article.id), method: :post, remote: :true do %>
		    <i class="fa fa-heart" aria-hidden="true" style="color: blue;"></i>
			<%= article.favorites.count %>
        <% end %>
	</div>
<% end %>