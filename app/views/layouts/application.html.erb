<!DOCTYPE html>
<html>
  <head>
    <title>Weiter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>

  <body>
      <header class="navbar navbar-top">
        <div class="container">
          <div class="row">
            <div class="bar header-border-bottom" >
              <nav class="nav navbar-nav navbar-left">
                <h2 class="weiter">Weiter</h2>
              </nav>
              <nav>
                <ul class="nav navbar-nav navbar-right">
                  <% if user_signed_in? %>
                    <li>
                      <%= link_to 'ホーム',articles_path, class: "glyphicon glyphicon-home home" %>
                    </li>
                    <li>
                      <%= link_to 'マイページ', user_path(current_user), class: "glyphicon glyphicon-user users" %>
                    </li>
                    <li>
                      <%= link_to '新規投稿', new_article_path, class: "glyphicon glyphicon-book books" %>
                    </li>
                  <% else %>
                    <li>
                      <%= link_to "トップ", root_path, class: "glyphicon glyphicon-log-in sign_in" %>
                    </li>
                    <li>
                      <%= link_to "新規登録",new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %>
                    </li>
                    <li>
                      <%= link_to "ログイン", new_user_session_path, class: "glyphicon glyphicon-log-in sign_in" %>
                    </li>
                  <% end %>
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </header>
        <!-- <div class="body">
        <div class="container">
        <% if flash[:notice] %>
          <div class="flash">
        <%= flash[:notice] %>
          </div>
        <% end %> -->
    <%= yield %>
  </body>
</html>
