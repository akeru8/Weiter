<main class="clearfix">
	<div class="container">
		<div class="main-top">
			<h1 class="top-theme">Top</h1>
			<div class="top-article">
				<div class="row">
					<div class="col-md-10">
						<% @articles.each do |article| %>
							<div>
								<%= link_to article_path(article) do %>
									<%= attachment_image_tag article, :image, size: "550x330", class: "img-rounded" %>
								<% end %>
							</div>
							<div>
								<p class="top-heart-comment">
									<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
									<%= article.favorites.count %>
									<i class="fa fa-comment"></i>
									<%= article.post_comments.count %>
								</p>
								<h3><%= link_to article.title, article_path(article) %></h3>
								<p class="top-profile">
									<%= link_to user_path(article.user) do %>
										<%= attachment_image_tag article.user, :profile_image, size: "60x60", class: "img-circle" %>
									<% end %>
									by<%= link_to article.user.name,  user_path(article.user) %>
								</p>
							</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>

		<div class="top-sidebar">
			<h1 class="top-side-theme">Ranking</h1>
			<div class=row>
				<div class="col-md-12">
					<% @all_ranks.each do |article| %>
						<div class="side-img">
							<%= link_to article_path(article) do %>
								<%= attachment_image_tag article, :image, size: "300x200", class: "img-rounded" %>
							<% end %>
						</div>
						<p class="side-heart-comment">
							<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
							<%= article.favorites.count %>
							<i class="fa fa-comment"></i>
							<%= article.post_comments.count %>
						</p>
						<h5 class="top-side-title"><%= link_to article.title, article_path(article) %></h5>
						<p class="top-side-profile">
							<%= link_to user_path(article.user) do %>
								<%= attachment_image_tag article.user, :profile_image, size: "40x40", class: "img-circle" %>
							<% end %>
							by<%= link_to article.user.name,  user_path(article.user) %>
						</p>
					<% end %>
				</div>
			</div>
		</div>
	</div>
	<span id="back">
      <a href="#">
        <img src="assets/arrow.png" alt="">
      </a>
    </span>
</main>_